{
  "name": "@odinblog/blog-shared-components",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:css": "tailwindcss -i ./src/lib.css -o ./dist/lib.css --minify",
    "dev:css": "tailwindcss -i ./src/lib.css -o ./dist/lib.css --watch"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./lib.css": "./dist/lib.css"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "react-router": "*"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.2.1",
    "tailwindcss": "^4.2.1"
  }
}
